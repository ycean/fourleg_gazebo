<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="robot" default="legged_robot"/>
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="pause" default="false"/>
  <arg name="verbose" default="false"/>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find fourleg_gazebo)/worlds/hello.world"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg pause)"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="verbose" value="$(arg verbose)"/>
    <env name="GAZEBO_MODEL_PATH" value="$(find fourleg_gazebo)/models:$(optenv GAZEBO_MODEL_PATH)"/>
    <!-- more default parameters can be changed here -->
  </include>
  <!--Load URDF into the ROS parameter server -->
  <include file="$(find fourleg_gazebo)/launch/spawn_robot_effort.launch"/>
  <include file="$(find fourleg_gazebo)/launch/robot_effort_control.launch"/>
</launch>
